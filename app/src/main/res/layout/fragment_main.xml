<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainFragment">

    <TextView
        android:id="@+id/tv_title_main"
        style="@style/DarkBold16TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin18"
        android:layout_marginTop="@dimen/margin30"
        android:fontFamily="@font/font_family"
        android:text="@string/main.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subTitle_main"
        style="@style/BlueNormal14TextStyle"
        android:layout_width="0dp"
        android:drawablePadding="@dimen/padding11"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin6"
        android:text="@string/main.SubTitle"
        app:drawableStartCompat="@drawable/ic_award"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_main"
        app:layout_constraintStart_toStartOf="@+id/tv_title_main"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_main" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mainCategory_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        android:paddingTop="@dimen/padding33"
        android:splitMotionEvents="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subTitle_main" />

</androidx.constraintlayout.widget.ConstraintLayout>