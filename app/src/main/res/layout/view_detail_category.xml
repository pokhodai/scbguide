<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin30"
    app:cardCornerRadius="@dimen/corner15"
    app:cardElevation="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_7996E5"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/WhiteBold14TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin20"
            android:layout_marginTop="@dimen/margin15"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Светофор переездный двухзначный типа СП2-2 " />

        <ImageView
            android:id="@+id/iv_bgr_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin15"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_details"
            android:layout_width="0dp"
            android:layout_height="@dimen/height167"
            android:layout_marginHorizontal="@dimen/margin80"
            android:layout_marginTop="@dimen/margin10"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_bgr_white"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView2"
            style="@style/OrangeBold14TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin16"
            android:layout_marginTop="@dimen/margin10"
            android:text="@string/detailsCategories.description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_details" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/BlackDarkNormal12TextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin16"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin18"
            app:layout_constraintBottom_toTopOf="@+id/mb_seeAll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:text="Оповещение пешеходов и автомобилей о приближении поезда к охраняемому (регулируемому) или неохраняемому (нерегулируемому) железнодорожному переезду с помощью световых и звуковых сигналов. Оповещение пешеходови авто..." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mb_seeAll"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10"
            android:text="@string/detailsCategories.seeAll"
            android:textColor="@color/main_orange"
            android:textSize="12sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_orange_arrow"
            app:iconGravity="textEnd"
            app:iconTint="@color/main_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>